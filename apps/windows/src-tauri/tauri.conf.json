{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "ShortcutAI",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev -- --host 127.0.0.1 --port 1420",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://127.0.0.1:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "event": {
        "listen": true,
        "emit": true
      },
      "window": {
        "show": true,
        "setFocus": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "ai.shortcut.app",
      "targets": "all",
      "windows": {
        "wix": {
          "language": ["en-US", "ja-JP"]
        }
      }
    },
    "windows": [
      {
        "title": "ShortcutAI",
        "width": 980,
        "height": 840,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
